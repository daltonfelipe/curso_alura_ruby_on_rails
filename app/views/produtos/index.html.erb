<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="alert alert-info" role="alert">
  <strong style="font-size:16pt"> Produtos </strong>
</div>

<table class="table table-bordered table-hover text-center">
  <thead>
    <tr>
      <td>Nome</td>
      <td>Descrição</td>
      <td>Departamento</td>
      <td>Preço</td>
      <td>Quantidade</td>
      <td colspan="2">Ações</td>
    </tr>
  </thead>
  <tbody>
    <%= render @produtos %>
  </tbody>
</table>

